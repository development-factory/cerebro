@page
@model IndexModel

@{
    ViewData["Title"] = "Index";
}

<form class="form">
    <div class="mt-3 mb-3">
        <label class="control-label">Name</label>
        <div class="d-flex w-25">
            <input type="text" asp-for="SearchString" class="form-control me-1"/>
            <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i></button>
        </div>
    </div>
</form>

<div class="border border-2 p-3">
    <p>
        <a class="btn btn-primary" asp-page="/Employees/Create"><i class="bi bi-plus-circle-fill"></i></a>
    </p>

    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Employees[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employees[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employees[0].DateOfBirth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employees[0].HiringDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employees[0].Role)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employees[0].Salary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employees[0].ExitDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Employees)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @item.DateOfBirth.ToShortDateString()
                    </td>
                    <td>
                        @item.HiringDate.ToShortDateString()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role)
                    </td>
                    <td>
                        @item.Salary.ToString("C")
                    </td>
                    <td>
                        @item.ExitDate?.ToShortDateString()
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-page="./Employees/Edit" asp-route-id="@item.Id"><i class="bi bi-pen-fill"></i></a>
                        <a class="btn btn-dark" asp-page="./Employees/Details" asp-route-id="@item.Id"><i class="bi bi-info-circle-fill"></i></a>
                        <a class="btn btn-danger" asp-page="./Employees/Delete" asp-route-id="@item.Id"><i class="bi bi-trash3-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


